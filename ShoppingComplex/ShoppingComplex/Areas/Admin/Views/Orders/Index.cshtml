
@{
    ViewBag.Tiitle = "Order";
}
<ol class="breadcrumb">
    <li>
        <i class="fa fa-dashboard"></i> <a href="/Admin/Home">Dashboard</a>
    </li>
    <li class="active">
        <i class="fa fa-reorder"></i> Order
    </li>
</ol>

<p>
   @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success animated tada" })
</p>

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well"></div>
            <div class="box-content">
                <table class="table table-responsive table-bordered" id="myTable">
                    <thead>
                        <tr>
                            <th>OrderId</th>
                            <th>Customer</th>
                            <th>OrderDate</th>
                            <th>RequireDate</th>
                            <th>Receiver</th>
                            <th>ราคารวมทั้งสิ้น</th>
                            <th>View</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (Order o in ViewBag.Orders)
                        {
                            <tr>
                                <td>@o.Id</td>
                                <td>@o.CustomerId</td>
                                <td>@o.OrderDate</td>
                                <td>@o.RequireDate</td>
                                <td>@o.Receiver</td>
                                <td>@o.Amount</td>
                                <td>@Html.DisplayFor(modelItem => o.view)</td>
                                <td>
                                    <a href="/Admin/Orders/Details/@o.Id" title="Detail" class="btn btn-success">
                                        <i class="fa fa-search icon-white"></i> Detail
                                    </a>
                                    <a href="/Admin/Orders/Edit/@o.Id" title="Edit" class="btn btn-info">
                                        <i class="fa fa-edit"></i> Edit
                                    </a>
                                    <a href="/Admin/Orders/Delete/@o.Id" title="Delete" class="btn btn-danger">
                                        <i class="fa fa-trash-o"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/span-->

</div>
