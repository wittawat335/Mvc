@model Product

@{
    ViewBag.Title = "Delete";
    Layout = null;
}

<<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Delete Product</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">

            <div class="form-group">
                <label class="control-label col-md-4">Image </label>
                <div class="col-md-6">
                    <img src="/Content/img/products/@Model.Image" class="img-thumbnail animated rollIn" width="200" height="225" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">ImageZoom </label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.ImageLarge, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">ID </label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Id, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Name </label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Price</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.UnitPrice, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">UnitBrief</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.UnitBrief, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">ProducttDate</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.ProductDate, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">CategorID</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Category.Name, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">SupplierID</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Supplier.Name, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Quantity in Stock</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Discount</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Discount, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Features</label>
                <div class="col-md-6">
                    @Html.CheckBoxFor(m => m.Available, new { @class = "check-box", @disabled = "disabled" }) @Html.LabelFor(m => m.Available)
                    @Html.CheckBoxFor(m => m.Special, new { @class = "check-box", @disabled = "disabled" }) @Html.LabelFor(m => m.Special)
                    @Html.CheckBoxFor(m => m.Latest, new { @class = "check-box", @disabled = "disabled" }) @Html.LabelFor(m => m.Latest)

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Views</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Views, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Description</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>


<div class="modal-footer">
        <button class="btn btn-primary" data-dismiss="modal">No</button>
        <input class="btn btn-danger" type="submit" value="Yes" />
</div>
}