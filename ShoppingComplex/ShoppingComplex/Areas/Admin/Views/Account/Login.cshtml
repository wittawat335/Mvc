
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link href="~/Areas/AdminTheme/Content/css/bootstrap-cerulean.min.css" rel="stylesheet"/>
<link href="~/Areas/AdminTheme/Content/css/charisma-app.css" rel="stylesheet" />
<style type="text/css">
    body {
        padding-bottom: 40px;
    }
</style>

<div class="ch-container">
    <div class="row">

        <div class="row">
            <div class="col-md-12 center login-header">
                <h2>Welcome to AdminArea</h2>
            </div>
            <!--/span-->
        </div><!--/row-->

        <div class="row">
            <div class="well col-md-5 center login-box">
                <div class="alert alert-info">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-warning">
                            @TempData["Message"].ToString()
                        </div>
                    }
                </div>
               
                    <fieldset>
                        @using (Html.BeginForm())
                        {
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user red"></i></span>
                                @Html.TextBox("UserName", null, new { @class = "form-control", placeholder = "Username" })
                            </div>
                            <div class="clearfix"></div>
                            <br>

                            <div class="input-group input-group-lg">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>
                                @Html.Password("Password", null, new { @class = "form-control", placeholder = "Password" })
                            </div>
                            <div class="clearfix"></div>

                            <div class="input-prepend">
                                <label class="remember" for="remember"><input type="checkbox" id="remember"> Remember me</label>
                            </div>
                            <div class="clearfix"></div>

                            <p class="center col-md-5">
                                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                                <button type="submit" class="btn btn-primary">Login</button>
                            </p>
                        }
                    </fieldset>
              
            </div>
            <!--/span-->
        </div><!--/row-->
    </div><!--/fluid-row-->

</div><!--/.fluid-container-->