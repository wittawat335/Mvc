
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link href="~/Areas/AdminTheme/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Areas/AdminTheme/Content/plugins/metisMenu.min.css" rel="stylesheet" />
<link href="~/Areas/AdminTheme/Content/sb-admin-2.css" rel="stylesheet" />
<link href="~/Areas/AdminTheme/Content/font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet" />

<style type="text/css">
    #background {
        background-color: black
    }
</style>

<div class="container-fluid" id="background">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h5 class="panel-title">Please Sign In</h5>
                </div>
                <div class="panel-body">
                    <fieldset>
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-warning">
                                @TempData["Message"].ToString()
                            </div>
                        }
                        @using (Html.BeginForm())
                        {

                            <hr/>

                            <div class="form-group">
                                <div>Username:</div>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                    @Html.TextBox("UserName", null, new {@class = "form-control", placeholder = "UserName"})
                                </div>
                            </div><br/>

                            <div class="form-group">
                                <div>Password:</div>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                    @Html.Password("Password", null, new {@class = "form-control", placeholder = "Password"})
                                </div>
                            </div><br/>

                            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl"/>
                            <input type="submit" value="Log in" class="btn btn-lg btn-info btn-block"/>
                        }
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    
</div>
<script src="~/Scripts/jquery-2.2.3.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Areas/AdminTheme/Scripts/metisMenu.min.js"></script>
<script src="~/Areas/AdminTheme/Scripts/sb-admin-2.js"></script>
