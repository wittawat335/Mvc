@model Order

@{
    ViewBag.Title = "Checkout";
}

<h2>Order Information</h2>

<div class="form-horizontal">

    <div class="form-group">
        <label class="control-label col-md-2">ชื่อลูกค้า</label>
        <div class="col-md-10">
            @Model.Customer.FullName
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">วันที่สั่งสินค้า</label>
        <div class="col-md-10">
            @Html.FormatValue(Model.OrderDate, "{0:yyyy-MM-dd}")
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">วันที่สะดวกรับสินค้า</label>
        <div class="col-md-10">
            @Html.FormatValue(Model.RequireDate, "{0:yyyy-MM-dd}")
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">ชื่อผู้รับ</label>
        <div class="col-md-10">
            @Model.Receiver
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Email Address</label>
        <div class="col-md-10">
            @Model.Address
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">ราคารวมทั้งสิ้น</label>
        <div class="col-md-10">
            @Html.FormatValue(Model.Amount, "{0:c}"))
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">ที่อยู่จัดส่ง</label>
        <div class="col-md-10">
            @Model.Description
        </div>
    </div>
</div>

<h2>Order Details</h2>
<table class="table table-hover">
    <tr>
        <th>รหัสสินค้า</th>
        <th>ชื่อสินค้า</th>
        <th>ราคา</th>
        <th>ส่วนลด</th>
        <th>จำนวน</th>
        <th>ราคารวม</th>
    </tr>
    @foreach (var d in Model.OrderDetails) { 
    <tr>
        <td>@d.ProductId</td>
        <td>@d.Product.Name</td>
        <td>@d.UnitPrice</td>
        <td>@d.Discount</td>
        <td>@d.Quantity</td>
        <td>@(d.UnitPrice * d.Quantity * (1 - d.Discount))</td>
    </tr>
    }
</table>